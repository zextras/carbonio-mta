    systemctl enable carbonio-mta-sidecar.service >/dev/null 2>&1 || :
  fi

  echo "======================================================"
  echo "Carbonio mta installed successfully!"
  echo "You must run pending-setups to configure it correctly."
  echo "======================================================"
}

